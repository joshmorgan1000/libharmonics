#version 450
layout(local_size_x = 256) in;
layout(std430, binding = 0) buffer Input { float data[]; };
layout(std430, binding = 1) buffer Output { float out[]; };
void main() {
    uint idx = gl_GlobalInvocationID.x;
    uint base = idx * 2;
    float a = data[base];
    float b = data[base + 1];
    out[idx] = max(a, b);
}
